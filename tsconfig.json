{
    "compileOnSave": true,
    "buildOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,
        "experimentalDecorators": true,
		"pretty": true,
        "isolatedModules": false,
        "emitDecoratorMetadata": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "noImplicitAny": false,
        "declaration": false,
        "noEmitHelpers": false,
        "strictNullChecks": false,
        "lib": ["es5", "dom", "es2015.promise", "es2016"]
    },
    "atom": {
        "rewriteTsconfig": false
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "awesomeTypescriptLoaderOptions": {
        "transpileOnly": true,
        "useCache": true,
        "forkChecker": true,
        "useWebpackText": true
    },
    "exclude": ["node_modules", "bin", "global.d.ts"],
    "files": [
        "src/index.ts"
    ]
}